import numpy as np
import matplotlib.pyplot as plt
import cv2


im = cv2.imread("mandrill.jpg")
print(im.shape)

# OpenCV images are actually represented in BGR order rather than RGB!
hist_b = cv2.calcHist([im],[0],None,[256],[0,256])
hist_g = cv2.calcHist([im],[1],None,[256],[0,256])
hist_r = cv2.calcHist([im],[2],None,[256],[0,256])

fig = plt.figure(figsize=(10,7))
rows = 1
cols = 2
fig.add_subplot(rows,cols,1)
plt.axis("off")

# plt.imshow(im)
plt.imshow(cv2.cvtColor(im, cv2.COLOR_BGR2RGB))
fig.add_subplot(rows,cols,2)
plt.plot(hist_b,color='b')
plt.plot(hist_g,color='g')
plt.plot(hist_r,color='r')
plt.show()
